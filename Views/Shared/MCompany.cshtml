@model Company_Managment.Models.Companies

@{
    ViewData["Title"] = "MCompany";
    
}
<link rel="stylesheet" href="~/css/CompanySite.css" />
<h4>Company @Model.Name info.</h4>
<div class="grid">
  
    <div class="C-photo">
        <img src="~/img/M-default.png" style="height:100%; width:100%;" />
    </div>
    <div class=" C-settings">
        <a asp-action="Index">Back to List</a>
        <br /> Add an employee:<br />
                    @using (Html.BeginForm("Check", "CheckInvite", FormMethod.Post,new { Cid = Model.id }))
                    {
                               <form method="post" name="new-employee">
                                   <input value="@Model.id" name="Cid" style="display:none;"/>
                                   <input type="email" name="email" placeholder="employee e-mail" id="email"/>
                                    <input type="submit" name="add-employee" value="Send invite" />

                               </form>
                    }
    </div>
    <div class="C-info">
        <table>
            <tr>
                <td>Company Name:</td>
                <td>@Html.DisplayFor(modelItem => Model.Name)</td>
            </tr>
            <tr>
                <td>Founder: </td>
                <td>@Html.DisplayFor(modelItem => Model.CreatorName)</td>
            </tr>
            <tr>
                <td>Creation Date:</td>
                <td>@Html.DisplayFor(modelItem => Model.CreateDate)</td>
            </tr>

        </table>
    </div>
    <div class="C-employee-list">
        <table>
            <tr><th>Employees</th></tr>
            @foreach (var item in Model.workers)
            {
                <tr><td>@Html.DisplayFor(modelItem => item)</td></tr>
            }
        </table>
    </div>

</div>


